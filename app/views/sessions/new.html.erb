<section class="admin-products-new">

  <header class="page-header">
    <h1>User &raquo; Sign In</h1>
  </header>

  <div class="well">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-1">
        <%= form_tag '/login' do %>

          <div class="form-group">
            <%= label_tag :email %>
            <div>
              <%= text_field_tag :email %>
            </div>
          </div>
          <div class="form-group">
            <%= label_tag :password %>
            <div>
              <%= password_field_tag :password %>
            </div>
          </div>

          <%= submit_tag "Sign In", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>



</section>
