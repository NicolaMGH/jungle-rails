<% if product = Product.find_by(id: product_id) %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= line_item_price / 100.0 %>
    </td>
    <td>
      <%= quantity %>
    </td>
    <td>
      <%= total_items_price / 100.0 %>
    </td>
  </tr>
<% end %>